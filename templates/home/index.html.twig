{% extends 'base.html.twig' %}

{% block title %}Riverhood | Accueil{% endblock %}

{% block body %}
    <div class="relative h-screen">
        <div class="absolute inset-0 bg-cover bg-center" style="background-image: url('{{ asset('images/hero.png') }}');"></div>

        <div class="absolute inset-0 bg-black bg-opacity-50"></div>

        <div class="relative z-10 flex flex-col items-center justify-center h-full text-center text-white">
            <h1 class="text-5xl lg:text-6xl font-bold">BIENVENUE SUR RIVERHOOD RP</h1>
            <a href="" class="mt-8 px-6 py-3 bg-white text-black rounded-md shadow hover:bg-gray-800 hover:text-white transition">Nous rejoindre</a>
            <img src="{{ asset('images/rounded_logo.png') }}" alt="Logo Riverhood" class="mt-8 w-32 h-auto" draggable="false">
        </div>
    </div>

    <div class="bg-white text-black py-12" id="about">
        <div class="container mx-auto px-4 text-center">
            <h1 class="text-4xl font-bold mb-4">À Propos de Riverhood</h1>
            <p class="text-lg max-w-2xl mx-auto">Riverhood est une communauté immersive où vous pouvez vivre des aventures uniques, rencontrer des amis et explorer de nouveaux horizons. Rejoignez-nous pour des expériences inoubliables!</p>
        </div>
    </div>
{% endblock %}