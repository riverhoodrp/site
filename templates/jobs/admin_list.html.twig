{# templates/jobs/admin_list.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Gestion des Offres d'Emploi{% endblock %}

{% block body %}
    <div class="flex items-center justify-center min-h-screen">
        <div class="container mx-auto py-8 mt-20 max-w-3xl">
            <h1 class="text-3xl font-bold mb-6 text-center">Gestion des Offres d'Emploi</h1>

            <div class="mb-4 text-center">
                <a href="{{ path('jobs_new') }}" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 transition">
                    Créer une nouvelle annonce
                </a>
            </div>

            {% if jobs|length > 0 %}
                <table class="w-full border border-gray-300 rounded-lg">
                    <thead class="bg-gray-200">
                    <tr>
                        <th class="py-2 px-4 text-left">Nom</th>
                        <th class="py-2 px-4 text-left">Titre</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for job in jobs %}
                        <tr class="border-t border-gray-300 hover:bg-gray-100">
                            <td class="py-2 px-4">{{ job.name }}</td>
                            <td class="py-2 px-4">{{ job.label }}</td>
                            <td class="py-2 px-4 text-center">
                                <a href="{{ path('jobs_edit', { id: job.id }) }}" class="bg-yellow-500 text-white px-4 py-2 rounded hover:bg-yellow-600 transition">Modifier</a>
                                <form action="{{ path('jobs_delete', { id: job.id }) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette annonce ?')" method="post" class="inline-block">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ job.id) }}">
                                    <button type="submit" class="bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600 transition">Supprimer</button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <p class="text-gray-500 mt-6 text-center">Aucune annonce n'est disponible.</p>
            {% endif %}
        </div>
    </div>
{% endblock %}
